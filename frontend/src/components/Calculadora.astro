<div class="container">
    <h2>shipping quote</h2>
    <form id="sumForm">
        <div class="form-group">
            <label for="location1">Location 1:</label>
            <input type="number" id="location1" name="location1" required>
        </div>
        <div class="form-group">
            <label for="location2">Location 2:</label>
            <input type="number" id="location2" name="location2" required>
        </div>
        <div class="form-group">
            <label for="weight">Weight:</label>
            <input type="number" id="weight" name="weight" required>
        </div>
        <div class="form-group">
            <label for="size">Size:</label>
            <input type="number" id="size" name="size" required>
        </div>
        <div class="form-group">
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" required>
        </div>
        <button type="button" onclick="sumValues()">Enviar</button>
    </form>
    <div id="resultContainer"></div>
</div>

<script>
    function sumValues() {
    // Obtener los valores de los campos
        var location1 = parseInt(document.getElementById('location1').value);
        var location2 = parseInt(document.getElementById('location2').value);
        var weight = parseInt(document.getElementById('weight').value);
        var size = parseInt(document.getElementById('size').value);
        var type = document.getElementById('type').value;

        // Calcular la suma de los valores
        var total = location1 + location2 + weight + size;

     // Mostrar el resultado en el contenedor inferior
        var resultContainer = document.getElementById('resultContainer');
        resultContainer.innerHTML = `
            <h3>Resultado</h3>
            <p><strong>Location 1:</strong> ${location1}</p>
            <p><strong>Location 2:</strong> ${location2}</p>
            <p><strong>Weight:</strong> ${weight}</p>
            <p><strong>Size:</strong> ${size}</p>
            <p><strong>Type:</strong> ${type}</p>
            <p><strong>Total:</strong> ${total}</p>
        `;
}

</script>
